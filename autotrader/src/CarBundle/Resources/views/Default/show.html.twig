{% extends 'base.html.twig' %}

{% block title %}
  {{ car.name }}
{% endblock %}

{% block body %}
    <h1>{{ car.make }} {{ car.name }}</h1>

    <table class="table">
        <tr>
            <td>Cena</td>
            <td>{{ car.price }}</td>
        </tr>
        <tr>
            <td>Rok</td>
            <td>{{ car.year }}</td>
        </tr>
        <tr>
            <td>Nawigacja</td>
            <td>{% if car.navigation %}
                  <span class="glyphicon glyphicon-ok"></span>
                {% else %}
                  <span class="glyphicon glyphicon-remove"></span>
                {% endif %}
            </td>
        </tr>
    </table>
    <p>{{ car.description }}</p>
    <a href="{{ url('offer') }}">Powr√≥t</a>
{% endblock %}