{% extends 'base.html.twig' %}

{% block title %}
  Najlepsze auta
{% endblock %}

{% block body %}
    <h1> Nasza oferta</h1>
    <table class="table">
        <tr>
            <th>Marka</th>
            <th>Model</th>
            <th>Dodatki</th>
        </tr>
        {% for car in cars %}
            <tr>
               <td>{{ car.make }}</td>
               <td>{{ car.name }}</td>
               <td><a href="{{ url('show_car', {id: car.id}) }}">Pokaż szczegóły</a></td>
            </tr>
        
        {% endfor %}
    </table>
{% endblock %}

